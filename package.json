{
  "name": "house-stack-template",
  "private": true,
  "sideEffects": false,
  "license": "MIT",
  "author": "drewjs (https://github.com/drewjs)",
  "type": "module",
  "scripts": {
    "build": "remix vite:build",
    "db:generate": "drizzle-kit generate:sqlite",
    "db:push": "drizzle-kit push:sqlite",
    "db:seed": "node --loader esbuild-register/loader -r esbuild-register ./app/db/seed.ts",
    "db:studio": "drizzle-kit studio",
    "dev": "remix vite:dev",
    "dev:mocks": "binode -r ./mocks/index.cjs -- vite:vite dev",
    "format": "prettier --write .",
    "lint": "biome lint .",
    "setup": "pnpm db:seed",
    "start": "binode -r dotenv/config -- @remix-run/serve:remix-serve ./build/server/index.js",
    "start:mocks": "binode -r dotenv/config -r ./mocks/index.cjs -- @remix-run/serve:remix-serve ./build/server/index.js",
    "test": "vitest",
    "test:e2e": "playwright test",
    "test:e2e:dev": "playwright test --ui",
    "test:e2e:install": "npx playwright install --with-deps chromium",
    "test:e2e:run": "cross-env CI=true playwright test",
    "typecheck": "tsc"
  },
  "dependencies": {
    "@libsql/client": "^0.6.0",
    "@radix-ui/react-checkbox": "^1.0.4",
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-slot": "^1.0.2",
    "@remix-run/css-bundle": "^2.8.1",
    "@remix-run/node": "^2.8.1",
    "@remix-run/react": "^2.8.1",
    "@remix-run/serve": "^2.8.1",
    "bcryptjs": "^2.4.3",
    "better-sqlite3": "^9.4.3",
    "binode": "^1.0.5",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.30.6",
    "isbot": "^5.1.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^2.2.2",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@biomejs/biome": "1.6.3",
    "@faker-js/faker": "^8.4.1",
    "@flydotio/dockerfile": "^0.5.4",
    "@ianvs/prettier-plugin-sort-imports": "^4.2.1",
    "@playwright/test": "^1.42.1",
    "@remix-run/dev": "^2.8.1",
    "@testing-library/jest-dom": "^6.4.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20.11.30",
    "@types/react": "^18.2.73",
    "@types/react-dom": "^18.2.23",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^1.4.0",
    "autoprefixer": "^10.4.19",
    "cross-env": "^7.0.3",
    "drizzle-kit": "^0.20.14",
    "happy-dom": "^14.3.9",
    "msw": "^2.2.13",
    "postcss": "^8.4.38",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.13",
    "start-server-and-test": "^2.0.3",
    "tailwindcss": "^3.4.3",
    "typescript": "~5.4.3",
    "vite": "^5.2.7",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^1.4.0"
  },
  "engines": {
    "node": "20"
  }
}

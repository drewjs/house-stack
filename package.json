{
  "name": "house-stack-template",
  "private": true,
  "sideEffects": false,
  "license": "MIT",
  "author": "drewjs (https://github.com/drewjs)",
  "type": "module",
  "scripts": {
    "build": "remix vite:build",
    "db:generate": "drizzle-kit generate:sqlite",
    "db:push": "drizzle-kit push:sqlite",
    "db:seed": "node --loader esbuild-register/loader -r esbuild-register ./app/db/seed.ts",
    "db:studio": "drizzle-kit studio",
    "dev": "remix vite:dev",
    "dev:mocks": "binode -r ./mocks/index.cjs -- vite:vite dev",
    "format": "prettier --write .",
    "lint": "biome lint .",
    "setup": "pnpm db:seed",
    "start": "binode -r dotenv/config -- @remix-run/serve:remix-serve ./build/index.js",
    "start:mocks": "binode -r dotenv/config -r ./mocks/index.cjs -- @remix-run/serve:remix-serve ./build/index.js",
    "test": "vitest",
    "test:e2e": "playwright test",
    "test:e2e:dev": "playwright test --ui",
    "test:e2e:install": "npx playwright install --with-deps chromium",
    "test:e2e:run": "cross-env CI=true playwright test",
    "typecheck": "tsc"
  },
  "dependencies": {
    "@libsql/client": "^0.3.6",
    "@radix-ui/react-checkbox": "^1.0.4",
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-slot": "^1.0.2",
    "@remix-run/css-bundle": "*",
    "@remix-run/node": "*",
    "@remix-run/react": "*",
    "@remix-run/serve": "*",
    "bcryptjs": "^2.4.3",
    "better-sqlite3": "^9.2.2",
    "binode": "^1.0.5",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.29.1",
    "isbot": "^3.7.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^2.2.0",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@biomejs/biome": "1.4.1",
    "@faker-js/faker": "^8.3.1",
    "@flydotio/dockerfile": "latest",
    "@ianvs/prettier-plugin-sort-imports": "^4.1.1",
    "@playwright/test": "^1.40.1",
    "@remix-run/dev": "*",
    "@testing-library/jest-dom": "^6.1.5",
    "@types/bcryptjs": "^2.4.6",
    "@types/morgan": "^1.9.9",
    "@types/node": "^18.19.3",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^1.1.0",
    "autoprefixer": "^10.4.16",
    "cross-env": "^7.0.3",
    "drizzle-kit": "^0.20.7",
    "happy-dom": "^12.10.3",
    "morgan": "^1.10.0",
    "msw": "^2.0.11",
    "postcss": "^8.4.32",
    "prettier": "^3.1.1",
    "prettier-plugin-tailwindcss": "^0.5.9",
    "start-server-and-test": "^2.0.3",
    "tailwindcss": "^3.4.0",
    "typescript": "~5.2.2",
    "vite": "^5.0.10",
    "vite-tsconfig-paths": "^4.2.2",
    "vitest": "^1.1.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
